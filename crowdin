#!/bin/bash
# Your build source code directory path. In the example below the build source code directory path is in the "home" folder. If your source code directory is on an external HDD it should look like: //media/your PC username/the name of your storage device/path/to/your/source/code/folder
SAUCE=~/android/android-6.0

# Let's apply all commits!
echo ""
echo ""
echo "----------------------------------------"
cd $SAUCE/frameworks/base
git fetch https://gerrit.omnirom.org/android_frameworks_base refs/changes/43/20243/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/Apollo
git fetch https://gerrit.omnirom.org/android_packages_apps_Apollo refs/changes/44/20244/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/Camera2
git fetch https://gerrit.omnirom.org/android_packages_apps_Camera2 refs/changes/45/20245/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/DeskClock
git fetch https://gerrit.omnirom.org/android_packages_apps_DeskClock refs/changes/46/20246/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/DSPManager
git fetch https://gerrit.omnirom.org/android_packages_apps_DSPManager refs/changes/47/20247/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/OmniGears
git fetch https://gerrit.omnirom.org/android_packages_apps_OmniGears refs/changes/48/20248/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/OpenDelta
git fetch https://gerrit.omnirom.org/android_packages_apps_OpenDelta refs/changes/49/20249/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/Settings
git fetch https://gerrit.omnirom.org/android_packages_apps_Settings refs/changes/50/20250/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/Launcher3
git fetch https://gerrit.omnirom.org/android_packages_apps_Launcher3 refs/changes/51/20251/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/OmniSwitch
git fetch https://gerrit.omnirom.org/android_packages_apps_OmniSwitch refs/changes/52/20252/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/apps/SnapdragonCamera
git fetch https://gerrit.omnirom.org/android_packages_apps_SnapdragonCamera refs/changes/55/20255/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
cd $SAUCE/packages/services/OmniJaws
git fetch https://gerrit.omnirom.org/android_packages_services_OmniJaws refs/changes/53/20253/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE
echo "Done!"
echo "----------------------------------------"
echo "----------------------------------------"
