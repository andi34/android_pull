echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/native
echo "----------------------------------------"
git revert 8e4f67d660749b1401917942af13aabe50eaf055 -n && git add --all && git commit -a -m "Revert native: dock battery"cd $SAUCE/vendor/cm
echo "----------------------------------------"
