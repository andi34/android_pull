git fetch http://review.cyanogenmod.org/CyanogenMod/android_device_samsung_p3100 refs/changes/37/130137/1 && git cherry-pick FETCH_HEAD
git fetch http://review.cyanogenmod.org/CyanogenMod/android_device_samsung_p3100 refs/changes/89/131289/2 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/p3110
echo "----------------------------------------"
echo "Nothing for now..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/p5100
echo "----------------------------------------"
git fetch http://review.cyanogenmod.org/CyanogenMod/android_device_samsung_p5100 refs/changes/34/130134/1 && git cherry-pick FETCH_HEAD
git fetch http://review.cyanogenmod.org/CyanogenMod/android_device_samsung_p5100 refs/changes/35/130135/1 && git cherry-pick FETCH_HEAD
git fetch http://review.cyanogenmod.org/CyanogenMod/android_device_samsung_p5100 refs/changes/90/131290/2 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/p5110
echo "----------------------------------------"
echo "Nothing for now..."
echo "----------------------------------------"
echo "----------------------------------------"
