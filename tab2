#!/bin/bash
echo ""
echo ""
cd device/samsung/omap4-common
echo "omap4-common: Update RIL header https://gerrit.omnirom.org/#/c/10443/"
git fetch https://gerrit.omnirom.org/android_device_samsung_omap4-common refs/changes/43/10443/4 && git cherry-pick FETCH_HEAD
cd ../../..
echo "----------------------------------------"
echo "----------------------------------------"
cd device/samsung/p3100
echo "P31XX: Update SELinux rules https://gerrit.slimroms.net/#/c/16633/"
git fetch https://gerrit.slimroms.net/SlimRoms/device_samsung_p3100 refs/changes/33/16633/10 && git cherry-pick FETCH_HEAD
cd ../../..
echo "----------------------------------------"
echo "----------------------------------------"
cd frameworks/native
echo "native: [1/2]: squashed commits for hwrotation https://gerrit.omnirom.org/#/c/10637/"
git fetch https://gerrit.omnirom.org/android_frameworks_native refs/changes/37/10637/4 && git cherry-pick FETCH_HEAD
cd ../..
echo "----------------------------------------"
echo "----------------------------------------"
cd frameworks/base
echo "base: [2/2]: squashed commits for hwrotation https://gerrit.omnirom.org/#/c/10965/"
git fetch https://gerrit.omnirom.org/android_frameworks_base refs/changes/65/10965/3 && git cherry-pick FETCH_HEAD
cd ../..
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
echo "----------------------------------------"
echo "----------------------------------------"


