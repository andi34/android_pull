#!/bin/bash
# Your build source code directory path. In the example below the build source code directory path is in the "home" folder. If your source code directory is on an external HDD it should look like: //media/your PC username/the name of your storage device/path/to/your/source/code/folder
SAUCE=~/android/aosp-4.4

# Let's apply all commits!
echo "----------------------------------------"
echo ""
echo "  AOSP ADDITIONS  "
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/system/core
git fetch https://github.com/SamsungGalaxyTab2-AOSP/aosp_system_core.git aosp-4.4
git cherry-pick d5a6d83890587e878367908e5f0ae5abdc9368a9
echo ""
echo "----------------------------------------"
cd $SAUCE/hardware/ti/omap4
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_hardware_ti_omap4 refs/changes/63/463/1 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_hardware_ti_omap4 refs/changes/87/387/3 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
cd $SAUCE/vendor/ti
git fetch unlegacy
git checkout unlegacy/stable
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/proprietary_vendor_ti refs/changes/62/462/2 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/proprietary_vendor_ti refs/changes/73/373/9 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
