echo "----------------------------------------"
echo "DeviceSettings: Overhaul"
git fetch https://review.slimroms.org/SlimRoms/device_samsung_espresso-common refs/changes/09/7309/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "echo swap from PRODUCT_PROPERTY_OVERRIDES to ADDITIONAL_BUILD_PROPERTIES"
git fetch https://review.slimroms.org/SlimRoms/device_samsung_espresso-common refs/changes/29/10329/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "espresso-common: set minfree overlay for less aggressive behaviour"
