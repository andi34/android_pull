#!/bin/bash
# Your build source code directory path. In the example below the build source code directory path is in the "home" folder. If your source code directory is on an external HDD it should look like: //media/your PC username/the name of your storage device/path/to/your/source/code/folder
SAUCE=~/android/aosp-7.1

# Let's apply all commits!
echo "----------------------------------------"
echo ""
echo "  SAMSUNG GALAXY TAB2 - UA ADDITIONS  "
echo ""
echo "----------------------------------------"
cd $SAUCE/device/samsung/espresso
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/98/1498/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
