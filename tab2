#!/bin/bash
SAUCE=~/android/android-7.1

# Let's apply all commits!
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/espressowifi
echo "----------------------------------------"
git fetch ssh://Android-Andi@review.lineageos.org:29418/LineageOS/android_device_samsung_espressowifi refs/changes/62/168062/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/libcore
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_libcore refs/changes/45/23045/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/system/netd
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_system_netd refs/changes/44/23044/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/opt/net/wifi
echo "----------------------------------------"
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/vendor/omni
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_vendor_omni refs/changes/93/18293/2 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
