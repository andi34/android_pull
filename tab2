#!/bin/bash
# Your build source code directory path. In the example below the build source code directory path is in the "home" folder. If your source code directory is on an external HDD it should look like: //media/your PC username/the name of your storage device/path/to/your/source/code/folder
SAUCE=~/android/cm-13.0

# Let's apply all commits!
echo ""
echo "----------------------------------------"
cd $SAUCE/device/samsung/espressowifi
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_device_samsung_espressowifi refs/changes/94/166994/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/espresso3g
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_device_samsung_espresso3g refs/changes/95/166995/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/tuna
echo "----------------------------------------"
echo "nothing..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/maguro
echo "----------------------------------------"
echo "nothing..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/hardware/ti/omap4
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/12/163412/1 && git cherry-pick FETCH_HEAD
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/13/163413/1 && git cherry-pick FETCH_HEAD
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/14/163414/1 && git cherry-pick FETCH_HEAD
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/15/163415/1 && git cherry-pick FETCH_HEAD
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/16/163416/1 && git cherry-pick FETCH_HEAD
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/17/163417/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "nothing..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/build
echo "----------------------------------------"
echo "Add back mka bootzip"
git fetch https://review.lineageos.org/LineageOS/android_build refs/changes/64/2964/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "Set metadata on bootzip"
git fetch https://review.lineageos.org/LineageOS/android_build refs/changes/70/2970/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/vendor/samsung
echo "----------------------------------------"
git fetch https://github.com/andi34/proprietary_vendor_samsung-1.git cm-13.0
git cherry-pick 0fc7339db97fdcef81b909e7f210991226035238
git cherry-pick da0cc99e099138fd3a45fb5663ce16222d3f36f7
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/vendor/cm
echo "----------------------------------------"
echo "Vendor: add hour and minute for zip-nameing"
git fetch https://review.lineageos.org/LineageOS/android_vendor_cm refs/changes/12/155912/2 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
