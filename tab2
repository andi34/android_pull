#!/bin/bash
# Your build source code directory path. In the example below the build source code directory path is in the "home" folder. If your source code directory is on an external HDD it should look like: //media/your PC username/the name of your storage device/path/to/your/source/code/folder
SAUCE=~/android/aosp-4.4

# Let's apply all commits!
echo "----------------------------------------"
echo ""
echo "  AOSP ADDITIONS  "
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/system/core
git fetch https://github.com/SamsungGalaxyTab2-AOSP/aosp_system_core.git aosp-4.4
git cherry-pick d5a6d83890587e878367908e5f0ae5abdc9368a9
echo ""
echo "----------------------------------------"
cd $SAUCE/device/samsung/espresso3g
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_device_samsung_espresso3g refs/changes/90/690/1 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_device_samsung_espresso3g refs/changes/97/697/2 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_device_samsung_espresso3g refs/changes/91/691/2 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_device_samsung_espresso3g refs/changes/95/695/2 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_device_samsung_espresso3g refs/changes/94/694/2 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_device_samsung_espresso3g refs/changes/61/761/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/hardware/ti/omap4
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_hardware_ti_omap4 refs/changes/39/639/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
cd $SAUCE/vendor/samsung
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/proprietary_vendor_samsung refs/changes/57/757/1 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/proprietary_vendor_samsung refs/changes/58/758/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/native
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_frameworks_native refs/changes/80/680/1 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_frameworks_native refs/changes/81/681/1 && git cherry-pick FETCH_HEAD
git fetch http://gerrit.unlegacy-android.cf/Unlegacy-Android/android_frameworks_native refs/changes/82/682/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
