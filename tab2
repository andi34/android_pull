#!/bin/bash
SAUCE=~/android/android-7.1

# Let's apply all commits!
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/build
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_build refs/changes/42/22842/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/espressowifi
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_device_samsung_espressowifi refs/changes/80/168080/1 && git cherry-pick FETCH_HEAD
git fetch ssh://Android-Andi@review.lineageos.org:29418/LineageOS/android_device_samsung_espressowifi refs/changes/62/168062/1 && git cherry-pick FETCH_HEAD
git fetch ssh://Android-Andi@review.lineageos.org:29418/LineageOS/android_device_samsung_espressowifi refs/changes/63/168063/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/av
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_frameworks_av refs/changes/77/22777/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/base
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_frameworks_base refs/changes/00/21600/5 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.omnirom.org/android_frameworks_base refs/changes/54/22854/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/opt/net/wifi
echo "----------------------------------------"
git fetch https://gerrit.omnirom.org/android_frameworks_opt_net_wifi refs/changes/53/22853/1 && git cherry-pick FETCH_HEAD
gecho ""
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
