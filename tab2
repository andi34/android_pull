#!/bin/bash

SAUCE=~/android/aosp-6.0

# Let's apply all commits!
echo "----------------------------------------"
echo ""
echo "  SAMSUNG GALAXY TAB2 - AOSP ADDITIONS  "
echo ""
echo "----------------------------------------"
cd $SAUCE/device/samsung/espresso
echo "----------------------------------------"
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/08/2308/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/hardware/ti/omap4
echo "----------------------------------------"
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_hardware_ti_omap4 refs/changes/10/2310/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/vendor/unlegacy
echo "----------------------------------------"
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_vendor_unlegacy refs/changes/58/1758/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"

cd $SAUCE/pull
. patch.sh
