#!/bin/bash
# Your build source code directory path. In the example below the build source code directory path is in the "home" folder. If your source code directory is on an external HDD it should look like: //media/your PC username/the name of your storage device/path/to/your/source/code/folder
SAUCE=~/android/aosp-7.1

# Let's apply all commits!
echo "----------------------------------------"
echo ""
echo "  SAMSUNG GALAXY TAB2 - UA ADDITIONS  "
echo ""
echo "----------------------------------------"
cd $SAUCE/build
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_build refs/changes/55/1955/2 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/espresso
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/85/1785/6 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/98/1498/11 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/06/1506/8 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/60/1760/11 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/28/1828/1 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/64/1764/3 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_device_samsung_espresso refs/changes/06/2006/2 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/tuna
echo "nothing to do..."
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/kernel/samsung/tuna
echo "nothing to do..."
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/hardware/ti/omap4
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_hardware_ti_omap4 refs/changes/95/1995/5 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_hardware_ti_omap4 refs/changes/96/1996/6 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/system/sepolicy
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_system_sepolicy refs/changes/07/2007/1 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/vendor/unlegacy
echo "----------------------------------------"
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_vendor_unlegacy refs/changes/58/1758/1 && git cherry-pick FETCH_HEAD
git fetch https://gerrit.unlegacy-android.org/Unlegacy-Android/android_vendor_unlegacy refs/changes/59/1759/3 && git cherry-pick FETCH_HEAD
echo ""
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
