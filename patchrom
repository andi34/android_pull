#!/bin/bash
SAUCE=~/android/cm-14.1

# Let's apply all commits!
echo ""
echo "----------------------------------------"
cd $SAUCE/device/samsung/espressowifi
echo "----------------------------------------"
echo "nothing..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/device/samsung/espresso3g
echo "----------------------------------------"
git fetch https://Android-Andi@review.lineageos.org/a/LineageOS/android_device_samsung_espresso3g refs/changes/23/187023/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/av
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_frameworks_av refs/changes/85/167785/3 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/native
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_frameworks_native refs/changes/22/187022/2 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/hardware/ti/omap4
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_hardware_ti_omap4 refs/changes/67/176667/1 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/system/core
echo "----------------------------------------"
echo "nothing..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/frameworks/native
echo "----------------------------------------"
echo "nothing..."
echo "----------------------------------------"
echo "----------------------------------------"
cd $SAUCE/vendor/cm
echo "----------------------------------------"
echo "Vendor: add hour and minute for zip-nameing"
echo "----------------------------------------"
git fetch https://review.lineageos.org/LineageOS/android_vendor_cm refs/changes/12/155912/2 && git cherry-pick FETCH_HEAD
echo "----------------------------------------"
echo "----------------------------------------"
echo ""
echo "Done!"
cd $SAUCE
echo "----------------------------------------"
echo "----------------------------------------"
